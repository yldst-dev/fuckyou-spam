{
  "name": "telegram-spam-bot",
  "version": "1.0.0",
  "description": "Telegram bot that detects and deletes spam messages using LLM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["telegram", "bot", "spam", "detection", "llm"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cerebras/cerebras_cloud_sdk": "^1.59.0",
    "node-telegram-bot-api": "^0.66.0",
    "dotenv": "^17.2.3",
    "winston": "^3.18.3",
    "@mozilla/readability": "^0.6.0",
    "jsdom": "^27.1.0",
    "axios": "^1.13.2",
    "sqlite3": "^5.1.6",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/sqlite3": "^3.1.11",
    "@types/jsdom": "^27.0.0",
    "@types/node-cron": "^3.0.11"
  },
  "overrides": {
    "request": {
      "form-data": "2.5.4",
      "tough-cookie": "4.1.3"
    },
    "@cypress/request-promise": {
      "request": "2.88.2"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}